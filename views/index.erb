	<head>
		<meta charset="utf-8">
		
		<title>Assignment 4</title>
		<meta name="description" content="Assignment 4">
		<meta name="author" content="Victor Andreoni">
		
		<link rel="stylesheet" type="text/css" href="<%= url('style.css') %>" />
		<script src="<%= url('/scripts/util.js') %>" type="text/javascript"></script>
		
	</head>

	<body>
		<div id="topbar">
			<header id="page-title-holder">
				<h1 id="page-title">Victor Andreoni - CS4241 - Assignment 4</h1>
			</header>
		</div>
		
		<div id="content"  style="min-height: 600px;">
			<br />
			<img src='./smartphones.jpg' class='center' width="525px" height="288px"/> 
			<h3 style="text-align: center"> 
				Welcome to the smartphone database! <br />
				Please log in or register to access the 
				database information!
			</h3>

			<div class="input_holder">
				<input type="button" value="Login" onClick="show_login()" />
				<input type="button" value="Register" onClick="show_register()" />

			</div>
			<br />

			<div class="input_holder">
				<form id="registration_form" style="display: none;" method="post" action="/panel">
					<div class="left">Full Name:</div> <div class="right"><input type="text" id="reg_name" name="fullname" maxlength="38"/></div> <br />
					<div class="left">Username:</div> <div class="right"><input type="text" id="reg_user" name="username" maxlength="18"/></div> <br />
					<div class="left">Password:</div> <div class="right"><input type="password" id="reg_pass" name="password" maxlength="9"/></div> <br />
					<input type="button" value="Submit" onclick="submit_register()"/>
				</form>
				<p id="register_fail_message" style="display: none; color: red;" > Registration Failed! </p>
			</div>

			<div class="input_holder">
				<form id="login_form" style="display: none;" method="post" action="/panel">
					<div class="left">Username:</div> <div class="right"><input type="text" id="log_user" name="username" maxlength="18"/></div> <br />
					<div class="left">Password:</div> <div class="right"><input type="password" id="log_pass" name="password" maxlength="9"/></div> <br />
					<input type="button" value="Submit" onClick="submit_login()" />
				</form>
				<br />
				<p id="login_fail_message" style="display: none; color:  red;"> Login Failed! </p>
			</div>

		</div>
		
		<div>
			<hr />
			<footer>
				<p style="text-align: center">
					&copy; Copyright  by Victor Andreoni
				</p>
			</footer>
		</div>
	</body>
</html>

